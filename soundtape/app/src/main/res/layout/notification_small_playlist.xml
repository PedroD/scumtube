<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/notification_small_wrapper"
              android:layout_width="match_parent"
              android:layout_height="64dip"
              android:background="@color/primary_background_inverted"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_small_imageview_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_download_light"/>

    <ImageView
        android:id="@+id/notification_small_imageview_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_mode_normal"/>

    <ImageView
        android:id="@+id/notification_small_imageview_previous"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_previous_light"/>

    <ProgressBar android:indeterminate="true"
                 android:layout_width="60dip"
                 android:layout_height="60dip"
                 android:id="@+id/marker_progress" style="?android:attr/progressBarStyle"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:visibility="gone"
        />

    <ImageView
        android:id="@+id/notification_small_imageview_playpause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_play_light"/>

    <ImageView
        android:id="@+id/notification_small_imageview_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_next_light"/>

    <ImageView
        android:id="@+id/notification_small_imageview_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_tomahawk"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_player_exit_light"/>

</LinearLayout>